{
  "name": "sfdc-helper",
  "version": "0.1.1",
  "type": "commonjs",
  "main": "index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "require": "./index.js",
      "types": "./types/index.d.ts"
    },
    "./client": {
      "require": "./src/client.js",
      "types": "./types/index.d.ts"
    }
  },
  "scripts": {
    "query": "node src/query.js",
    "start": "node src/server.js",
    "selftest": "node src/selftest.js",
    "example": "node examples/client-usage.js",
    "example:ts": "npx ts-node examples/typescript-example.ts",
    "chat": "node examples/chat-agent-demo.js",
    "chat:interactive": "node examples/chat-agent-demo.js --interactive",
    "test": "node src/chat/test/run-all-tests.js",
    "test:chat": "node src/chat/test/run-all-tests.js",
    "test:goal": "node src/chat/test/Goal.test.js",
    "test:manager": "node src/chat/test/GoalManager.test.js",
    "test:agent": "node src/chat/test/ChatAgent.test.js",
    "test:runtime": "node examples/runtime-integration-test.js",
    "test:enhanced": "node examples/enhanced-chat-test.js",
    "demo:integration": "node examples/quick-integration-example.js",
    "demo:fast": "node examples/fast-debug-test.js",
    "demo:verbose": "node examples/verbose-debug-test.js",
    "pack:client": "node scripts/pack-client.js"
  },
  "bin": {
    "sfdc-helper": "bin/sfdc-helper"
  },
  "files": [
    "bin/",
    "src/",
    "types/",
    "index.js",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "salesforce",
    "jsforce",
    "api",
    "read-only",
    "chatbot",
    "sdk",
    "client",
    "org-aware",
    "typescript"
  ],
  "author": "Matt Thompson",
  "license": "MIT",
  "description": "Org-aware, read-only Salesforce API layer with safe SOQL, SOSL, schema, analytics, and self-test.",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsforce": "^3.10.4",
    "undici": "^7.15.0"
  }
}
